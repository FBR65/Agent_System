#---- MODEL CONTEXT PROTOCOL (MCP) CONFIGURATION ----

# MCP Core Settings
MCP_ENABLED=true
MCP_VERSION=1.2
MCP_CONTEXT_WINDOW_SIZE=32768
MCP_MAX_CONTEXT_LENGTH=128000
MCP_CONTEXT_OVERLAP=512

# Context Management
MCP_CONTEXT_PERSISTENCE=true
MCP_CONTEXT_STORAGE_PATH=./data/context
MCP_CONTEXT_COMPRESSION=adaptive
MCP_CONTEXT_CLEANUP_INTERVAL=3600
MCP_CONTEXT_TTL=86400

# Context Filtering & Optimization
MCP_SMART_FILTERING=true
MCP_RELEVANCE_THRESHOLD=0.7
MCP_SEMANTIC_FILTERING=true
MCP_TEMPORAL_WEIGHTING=true
MCP_CONTEXT_SUMMARIZATION=true

# Dynamic Context Injection
MCP_DYNAMIC_INJECTION=true
MCP_INJECTION_STRATEGY=relevance_based
MCP_MAX_INJECTION_SIZE=8192
MCP_INJECTION_PRIORITY=user_context,task_context,historical_context

# Multimodal Context
MCP_MULTIMODAL_SUPPORT=true
MCP_IMAGE_CONTEXT_ENABLED=false
MCP_AUDIO_CONTEXT_ENABLED=false
MCP_MAX_MEDIA_SIZE=5242880

# State Management
MCP_STATE_PERSISTENCE=true
MCP_STATE_STORAGE_PATH=./data/state
MCP_STATE_SERIALIZATION=json
MCP_STATE_BACKUP_INTERVAL=1800
MCP_STATE_VERSIONING=true

# Model-Specific Settings
MCP_MODEL_CONTEXT_STRATEGIES={
  "qwen2.5:latest": {"strategy": "sliding_window", "window_size": 24576},
  "google/gemma3:latest": {"strategy": "hierarchical", "levels": 3},
  "paraphrase-multilingual:latest": {"strategy": "semantic_chunks", "chunk_size": 512}
}

# Performance Optimization
MCP_CONTEXT_CACHING=true
MCP_CACHE_SIZE=1000
MCP_CACHE_TTL=7200
MCP_PRELOAD_CONTEXT=true
MCP_PARALLEL_PROCESSING=true

# Memory Management
MCP_MEMORY_LIMIT=2147483648
MCP_MEMORY_CLEANUP_THRESHOLD=0.8
MCP_GARBAGE_COLLECTION_INTERVAL=900

# Monitoring
MCP_METRICS_ENABLED=true
MCP_CONTEXT_ANALYTICS=true
MCP_PERFORMANCE_TRACKING=true
MCP_LOG_CONTEXT_USAGE=true