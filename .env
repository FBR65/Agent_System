# Server configuration
SERVER_PORT=8000
SERVER_HOST=localhost
SERVER_SCHEME=http
GRADIO_PORT=7860
GRADIO_HOST=127.0.0.1

#---- OLLAMA CONFIGURATION ----
# Base Ollama settings
BASE_URL=http://localhost:11434/v1/
API_KEY=ollama

# Specialized models for different agents
SENTIMENT_MODEL=google/gemma3:latest
OPTIMIZER_MODEL=qwen2.5:latest
LEKTOR_MODEL=qwen2.5:latest
QUERY_REF_MODEL=qwen2.5:latest
USER_INTERFACE_MODEL=qwen2.5:latest

# Fallback for TEXT_OPT_MODEL (used in some places)
TEXT_OPT_MODEL=qwen2.5:latest

#---- UVICORN CONFIGURATION ----
UVICORN_RELOAD=false
UVICORN_WORKERS=1
UVICORN_LOG_LEVEL=info

#---- DEBUGGING ----
DEBUG_AGENT_RESPONSES=true
DEBUG_A2A_CALLS=true
LOG_LEVEL=INFO

#---- TIKA ----
TIKA_SERVER_URL=http://127.0.0.1:9998/tika

#---- QDRANT ----
QDRANT_HOST=127.0.0.1
QDRANT_PORT=6333
QDRANT_TIMEOUT=120
DISTANCE_METRIC=MANHATTAN

#---- EMBEDDING ----
EMBEDDING_MODEL=paraphrase-multilingual:latest
SPARSE_EMBEDDING_MODEL_NAME=Qdrant/bm42-all-minilm-l6-v2-attentions
SEMANTIC_CHUNK_MODEL=aari1995/German_Semantic_V3

#---- SPACY ----
SPACY_MODEL=de_core_news_lg

#---- MODULAR CONFIGURATION REFERENCES ----
# Load additional configuration files for specialized components
A2AP_CONFIG_FILE=.env.a2ap
MCP_CONFIG_FILE=.env.mcp
PROMPT_ENGINEER_CONFIG_FILE=.env.prompt_engineer

#---- PROMPT ENGINEERING ----
PROMPT_ENGINEER_MODEL=qwen2.5:latest
PROMPT_OPTIMIZATION_ENABLED=true
PROMPT_TEMPLATES_PATH=./templates/prompts
PROMPT_QUALITY_THRESHOLD=0.8
PROMPT_ITERATION_LIMIT=3

#---- AGENT ORCHESTRATION ----
ORCHESTRATOR_ENABLED=true
ORCHESTRATOR_MODEL=qwen2.5:latest
MAX_AGENT_DELEGATION_DEPTH=3
AGENT_COORDINATION_TIMEOUT=300
