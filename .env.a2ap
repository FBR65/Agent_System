#---- AGENT-TO-AGENT PROTOCOL (A2AP) CONFIGURATION ----

# A2AP Core Settings
A2AP_ENABLED=true
A2AP_VERSION=1.0
A2AP_PROTOCOL_TIMEOUT=30
A2AP_MAX_RETRIES=3
A2AP_RETRY_DELAY=2

# Agent Discovery
A2AP_DISCOVERY_MODE=registry
A2AP_REGISTRY_URL=http://localhost:8001/registry
A2AP_HEARTBEAT_INTERVAL=60
A2AP_AGENT_TTL=300

# Communication Settings
A2AP_MESSAGE_FORMAT=json
A2AP_COMPRESSION=gzip
A2AP_MAX_MESSAGE_SIZE=10485760
A2AP_ENCRYPTION_ENABLED=false
A2AP_AUTH_TOKEN=a2ap_secret_token_2024

# Agent Capabilities
A2AP_CAPABILITY_BROADCAST=true
A2AP_CAPABILITY_CACHE_TTL=3600
A2AP_LOAD_BALANCING=round_robin

# Specialized Agent Endpoints
A2AP_SENTIMENT_AGENT_URL=http://localhost:8002/sentiment
A2AP_OPTIMIZER_AGENT_URL=http://localhost:8003/optimizer
A2AP_LEKTOR_AGENT_URL=http://localhost:8004/lektor
A2AP_QUERY_REF_AGENT_URL=http://localhost:8005/query_ref
A2AP_UI_AGENT_URL=http://localhost:8006/ui

# Task Delegation
A2AP_TASK_QUEUE_SIZE=100
A2AP_PARALLEL_TASKS=5
A2AP_TASK_TIMEOUT=120
A2AP_RESULT_AGGREGATION_TIMEOUT=30

# Monitoring & Logging
A2AP_METRICS_ENABLED=true
A2AP_METRICS_PORT=9090
A2AP_TRACE_CALLS=true
A2AP_LOG_COMMUNICATION=true